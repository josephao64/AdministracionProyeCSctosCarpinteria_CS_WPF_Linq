<Page x:Class="ProyectoCarpineriaCS_WPF.GestionWindow"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     Title="Gestión de Proyectos" Height="700" Width="1300" Background="#e3d7bf">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 20 0 10">Estadísticas de Proyectos</TextBlock>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20">
            <TextBlock FontSize="18" Margin="0 0 0 10">Total de proyectos:</TextBlock>
            <TextBlock x:Name="lblTotalProyectos" FontSize="16" FontWeight="Bold" Margin="0 0 0 10" />

            <TextBlock FontSize="18" Margin="0 0 0 10">Proyecto más caro:</TextBlock>
            <TextBlock x:Name="lblProyectoMasCaro" FontSize="16" FontWeight="Bold" Margin="0 0 0 10" />

            <TextBlock FontSize="18" Margin="0 0 0 10">Proyecto más reciente:</TextBlock>
            <TextBlock x:Name="lblProyectoMasReciente" FontSize="16" FontWeight="Bold" Margin="0 0 0 10" />

            <!-- Agrega más controles según las estadísticas que quieras mostrar -->
        </StackPanel>
    </Grid>
</Page>
